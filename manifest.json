{
    "manifest_version": 3,
    "name": "ADG",
    "version": "0.1",
    "description": "Reviewer Recommender for eJP for editors across Nature Portfolio.",
    
    "icons": {
        "128": "icon.png"
    },

    "content_scripts": [
        {
            "matches": [
                "https://mts-ncomms.nature.com/*"
            ],
            "js": [
                "jquery.js",
                "helper_functions.js",
                "bootstrap.min.js",
                "contentMTS.js",
                "MSDetails.js",
                "recommender.js"
            ],
            "css": [
                "overlay-styles.css",
                "custom.css",
                
                "bs.css"
            ]
        }
    ],

    "web_accessible_resources": [
        {
            "resources": ["adgoverlay.html"],
            "matches": ["https://mts-ncomms.nature.com/*"]
        }
    ],

    "background": {
        "service_worker": "background.js"
    }
}

{
    "manifest_version": 3,
    "name": "ADG",
    "version": "0.1",
    "description": "Reviewer Recommender for eJP for editors across Nature Portfolio.",
    
    "content_scripts": [
        {
            "matches": [
                "https://mts-ncomms.nature.com/*",
                "https://mts-commspsychol.nature.com/*",
                "https://mts-nature.nature.com/*"

            ],
            "js": [
                "jquery.js",
                "helper_functions.js",
                "bootstrap.min.js",
                "contentMTS.js",
                "MSDetails.js",
                "recommender.js"
            ],
            "css": [
                "custom.css",
                "bs.css"
            ]
        }
    ],

    "web_accessible_resources": [
        {
          "resources": ["adgoverlay.html"],
          "matches": ["<all_urls>"]
        }
      ],

    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://mts-ncomms.nature.com/*",
        "https://www.googletagmanager.com/*",
        "https://www.google-analytics.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
